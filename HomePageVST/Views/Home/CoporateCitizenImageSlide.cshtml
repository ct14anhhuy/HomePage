@model IEnumerable<DTO.ImageDTO>

<div id="cpSlide" class="container">
    <div class="row">
        <div class="col-xs-11 col-md-10 col-centered" style="padding-bottom:20px">
            <h4 class="wow fadeInUp" data-wow-delay="0.4s">Coporate Citizen</h4>
            <div id="carousel" class="carousel slide" data-ride="carousel" data-type="multi" data-interval="2500">
                <div class="carousel-inner">
                    @{
                        int i = 0;
                        string active = "";
                        foreach (var image in Model)
                        {
                            i++;
                            active = i == 1 ? "active" : "";
                            <div class="item @active">
                                <div class="carousel-col">
                                    <a href="@image.FilePath" data-lightbox="image-1" data-title="@image.ImageDescription">
                                        <img class="img-responsive" style="height:150px; width:250px" src="@image.MinimalFilePath" />
                                        <span class="galery-link">@image.ImageDescription</span>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="left carousel-control">
                    <a href="#carousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                </div>
                <div class="right carousel-control">
                    <a href="#carousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-10 col-centered" style="padding-bottom:20px">
            <h4 class="wow fadeInUp" data-wow-delay="0.4s">Introduction Posco VST</h4>
            <table id="tblVideo" style="width:100%; table-layout:fixed">
                <tr>
                    <td align="center" width="33%">
                        <video class="video-js"
                               controls
                               preload="none"
                               width="310"
                               height="174"
                               poster="~/images/Posco.jpg"
                               data-setup="{}">
                            <source src="@Url.Content("video/POSCO-VST-180418.mp4")" type="video/mp4" />
                        </video>
                    </td>
                    <td align="center" width="33%">
                        <video class="video-js"
                               controls
                               preload="none"
                               width="310"
                               height="174"
                               poster="~/images/Posco.jpg"
                               data-setup="{}">
                            <source src="@Url.Content("video/posco-vst-15.12.2015.mp4")" type="video/mp4" />
                        </video>
                    </td>
                    <td align="center" width="33%">
                        <video class="video-js"
                               controls
                               preload="none"
                               width="310"
                               height="174"
                               poster="~/images/Posco.jpg"
                               data-setup="{}">
                            <source src="@Url.Content("video/POSCO-VST-final-6.12.2017.mp4")" type="video/mp4" />
                        </video>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>